{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "promise"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len":"off",
        "no-console":"warn",
        "class-methods-use-this":"off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
}